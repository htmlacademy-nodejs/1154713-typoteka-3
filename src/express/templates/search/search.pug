extends ../partials/layout.pug

block page
  .wrapper-color
    header.header
      a.header__logo.logo(href='#')
        img.logo__image(src='/img/icons/logo-image-only.svg', alt='логотип Тайпотеки')
        span.logo__name Типотека
      button.button.button--colored.header__button-new Новая запись
      .header__dropdown
        a.button.button--burger.header__burger(href='#') Открыть меню
        ul.navigation.header__navigation
          li.navigation__item
            a(href='main.html') Пункт меню
          li.navigation__item
            a(href='main.html') Пункт меню
          li.navigation__item
            a(href='main.html') Пункт меню
          li.navigation__item
            a(href='main.html') Пункт меню
      a.header__search.button.button--search(href='#', aria-label='поиск по сайту')
    main
      section.search-page
        .search-page__wrapper
          if searchData === 'not-found'
            .search-page__wrapper--empty
          h1 Поиск
          .search.search-page__form
            form(action='/search', method='post')
              label
                input(type='text', name='search', value=searchValue, placeholder='Что ищем?')
              button.search__button.button.button--transparent(type='submit') Найти
            if searchData !== 'not-found' && searchData.length
              each item in searchData
                .search__result
                  time.search__date(datetime='2019-03-21T20:33') #{item.createdDate}
                  a.search__link #{item.title}
          if searchData === 'not-found'
            p.search-page__empty Ничего не нашлось
    include ../partials/footer-page.pug
